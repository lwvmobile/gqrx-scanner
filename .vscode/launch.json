{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/gqrx-scanner",
            "args": 
            [
                    "-y", "1"
                    //"-h", "localhost", 
                    //"-p", "7356", 
                    //"--mode", "bookmark",
                    //"-f 429000000",
                    //"--min", "430000000", 
                    //"--max", "432000000",
                    //"--tags", "\"ponti\"",                 
                    //"-d", "2"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
